@model Hadia.Models.ViewModels.UgCollegesViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="UgCollege" method="post">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Create UG College</h5>
            <div class="header-elements">
            </div>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" form-group">
                <label asp-for="UgCollegeName" class="control-label"></label>
                <Input asp-for="UgCollegeName" class="form-control" />
                <span asp-validation-for="UgCollegeName" class="text-danger"></span>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
                <a asp-action="index" class="btn bg-transparent text-white border-white border-2">Cancel</a>
                <button type="submit" class="btn btn-outline bg-white text-white border-white border-2">Save <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
        </div>
</form>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}