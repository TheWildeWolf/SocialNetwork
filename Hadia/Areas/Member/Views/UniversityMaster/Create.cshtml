@model Hadia.Models.ViewModels.UniversityMasterViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="UniversityMaster" method="post">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Create University</h5>
            <div class="header-elements">
            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
            <div class="form-group">
                <label asp-for="UniversityName" class=" control-label"></label>
                <input asp-for=" UniversityName" class=" form-control" />
                <span asp-validation-for=" UniversityName" class=" text-danger"></span>
            </div>
            <div class="form-group">

                Select Country
                @Html.DropDownListFor(x => x.CountryId, Model.CountryList, "--Select A Country --", new { @class = "form-control" })
                <span asp-validation-for="CountryId" class=" text-danger"></span>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
                <a asp-action="index" class="btn bg-transparent text-white border-white border-2">Cancel</a>
                <button type="submit" name="SaveNew"  value="SaveNew" class="btn btn-outline bg-white text-white border-white border-2">Save New<i class="icon-paperplane ml-2"></i></button>
                <button type="submit" name="btnSave"  value="Save" class="btn btn-outline bg-white text-white border-white border-2">Save <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
    </div>
</form>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
