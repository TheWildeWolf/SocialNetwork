@model Hadia.Models.ViewModels.StateMasterViewModel
@{
    ViewData["Title"] = "State";
    ViewData["Description"] = "Create";
}
<form asp-action="Create" asp-controller="StateMaster" method="post">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title"></h5>
            <div class="header-elements">
            </div>
        </div>

        <div class="card-body">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" form-group">
                <label asp-for="StateName" class="control-label"></label>
                <Input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center bg-white">
            <a asp-action="Index" class="btn btn-light">Cancel</a>
            <div class="d-inline-flex">
                <button type="reset" name="SaveNew"  value="SaveNew"  class="btn btn-warning">Save & New</button>
                <button type="submit" name="btnSave"  value="Save" class="btn bg-blue ml-3">Save <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
    </div>
            

            
</form>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
