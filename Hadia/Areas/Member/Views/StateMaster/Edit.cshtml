@model Hadia.Models.ViewModels.StateMasterViewModel
@{
    ViewData["Title"] = "State";
    ViewData["Description"] = "Edit ";
}

<form asp-action="Edit" asp-controller="StateMaster" method="post">
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title"></h5>
            <div class="header-elements">
            </div>
        </div>

        <div class="card-body">

            <input type="hidden" asp-for=" Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class=" text-danger"></span>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
                <a asp-action="index" class="btn bg-transparent text-white border-white border-2">Cancel</a>
                <button type="submit" class="btn btn-outline bg-white text-white border-white border-2">Save <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
    </div>

</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

