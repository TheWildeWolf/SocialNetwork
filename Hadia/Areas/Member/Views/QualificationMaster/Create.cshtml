@model Hadia.Models.ViewModels.EducationalQualificationMasterViewModel
@{
    ViewData["Title"] = "Educational Qualification";
    ViewData["Description"] = "Create";
}

<form asp-action="Create" asp-controller="QualificationMaster" method="post">
    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
            <div class="form-group">
                <label asp-for="DegreeName" class=" control-label"></label>
                <input asp-for="DegreeName" class=" form-control" />

                <span asp-validation-for="DegreeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rank" class=" control-label"></label>
                <input asp-for="Rank" class=" form-control" />

                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPhd" class=" control-label"></label>
                <input type="checkbox" asp-for="IsPhd" />

                </div>
            <div class="card-footer d-flex justify-content-between align-items-center bg-teal-400 border-top-0">
                <a asp-action="index" class="btn bg-transparent text-white border-white border-2">Cancel</a>
                <button type="submit" name="SaveNew"  value="SaveNew"   class="btn btn-outline bg-white text-white border-white border-2">Save and New <i class="icon-paperplane ml-2"></i></button>
                <button type="submit" name="btnSave"  value="Save"  class="btn btn-outline bg-white text-white border-white border-2">Save <i class="icon-paperplane ml-2"></i></button>
            </div>
            </div>
        </div>
</form>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}