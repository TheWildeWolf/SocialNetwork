@model Hadia.Models.ViewModels.MemberDetailsViewModel
<div class="card-body">
    <table class="table table-framed">
        <thead>
            <tr>
                <th>
                    Sn
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    Location
                </th>
                <th>
                    Country
                </th>
                <th>
                    Job Title
                </th>
                <th>
                    Date From
                </th>
                <th>
                    Date Upto
                </th>

            </tr>
        </thead>
        <tbody>
            @{ int SN = 0; }
            @foreach (var Work in Model.WorkDetails)
            {

                <tr>

                    <td> @(SN += 1)</td>
                    <td>@Html.DisplayFor(x => Work.CompanyName)</td>
                    <td>@Html.DisplayFor(x => Work.Location)</td>
                    <td>@Html.DisplayFor(x => Work.Country.CountryName)</td>
                    <td>@Html.DisplayFor(x => Work.JobTitle)</td>
                    <td>@Work.DateForm.ToString("MMM/dd/yyyy")</td>
                    <td>@Work.DateUpto?.ToString("MMM/dd/yyyy")</td>
                    <td>
                        <a asp-action="EditWorkDetails" asp-route-id="@Model.Id" class="btn btn-outline bg-primary border-primary text-primary-800 btn-icon"><i class="icon-compose"></i></a>
                        <a asp-action="DeleteWorkDetails" asp-route-id="@Model.Id" class="btn btn-outline bg-danger border-primary text-primary-800 btn-icon confirm"><i class="icon-trash-alt"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
