@model List<Hadia.Models.ViewModels.DistrictMasterViewModel>
    @{
        ViewData["Title"] = "Index";

    }

    <h2>Districts</h2>
    @Html.ActionLink("Create New", "Create")
    <table class="table">
        <thead>
            <tr>
                <th>
                    Sn
                </th>
                <th>

                    District Name
                </th>
                <th>
                    State
                  
                </th>
               
                <th>
                    Option
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int SlNo = 0; }
            @foreach (var master in Model)
            {
            <tr>
                <td> @(SlNo += 1)</td>
                <td>@Html.DisplayFor(x => master.DistrictName)</td>

                <td>@Html.DisplayFor(x => master.StateName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@master.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@master.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@master.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
