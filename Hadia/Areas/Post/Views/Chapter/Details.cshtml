@model Hadia.Models.ViewModels.ChapterViewModel
@{
    ViewData["Title"] = "Chapter";
    ViewData["Description"] = "Details";
}



<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">  @Html.LabelFor(model => model.GroupName)</dt>
            <dd class="col-sm-9">  @Html.DisplayFor(model => model.GroupName)</dd>

            <dt class="col-sm-3">    @Html.LabelFor(model => model.Description)</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">     @Html.LabelFor(model => model.FormedOn)</dt>
            <dd class="col-sm-9">
                @Model.FormedOn?.ToString("MM/dd/yyyy")
               
            </dd>
            <dt class="col-sm-3">     @Html.LabelFor(model => model.ImageFile)</dt>
            <dd class="col-sm-9">
                <img src='@Model.ImageLocation' asp-append-version="true" />
            </dd>
        </dl>
    </div>
</div>

